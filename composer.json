{
    "name": "afshinpersian/bonsai",
    "description": "bonsai is a lightweight php framework from slim3",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "afshin",
            "email": "afshin.akhgar@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "slim/slim": "^3.0",
        "symfony/var-dumper": "^4.0",
        "monolog/monolog": "^1.23",
        "zhangshize/slim-facades": "^1.1",
        "runcmf/runtracy": "^0.2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/",
            "Console\\": "src/bin/console",
            "Test\\": "src/tests",
            "Kernel\\": "kernel/"
        }
    },
    "require-dev": {
        "phpmetrics/phpmetrics": "^2.3",
        "phpunit/phpunit": "5.4.*",
        "symfony/process": "2.*",
        "symfony/console": "^3.3"
    }
}
