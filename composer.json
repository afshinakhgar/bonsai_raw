{
    "name": "afshinpersian/bonsai",
    "description": "bonsai is a lightweight php framework from slim3",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "afshin",
            "email": "afshin.akhgar@gmail.com"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": ">= 7.1.0",
        "slim/slim": "^3.0",
        "monolog/monolog": "^1.23",
        "zhangshize/slim-facades": "^1.1",
        "vlucas/phpdotenv": "^2.4",
        "illuminate/database": "~5.6",
        "robmorgan/phinx": "^0.9.2",
        "slim/csrf": "^0.8.2",
        "slim/flash": "^0.4.0",
        "buchin/slim-blade-view":"dev-master",
        "zeuxisoo/slim-whoops": "0.6.*",
        "davidepastore/slim-validation": "^0.5.0"

    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Console\\": "console/",
            "Test\\": "tests/",
            "Kernel\\": "kernel/"
        }
    },
    "require-dev": {
        "phpmetrics/phpmetrics": "^2.3",
        "phpunit/phpunit": "5.4.*",
        "symfony/process": "2.*",
        "symfony/console": "^3.3",
        "runcmf/runtracy": "^0.2.3"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "serve": "php -S 127.0.0.1:8001 -t public"
    }
}
