{
    "name": "afshinpersian/bonsai",
    "description": "bonsai is a lightweight php framework from slim3",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "afshin",
            "email": "afshin.akhgar@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "slim/slim": "^3.0",
        "symfony/var-dumper": "^4.0",
        "monolog/monolog": "^1.23",
        "zhangshize/slim-facades": "^1.1",
        "runcmf/runtracy": "^0.2.3",
        "vlucas/phpdotenv": "^2.4",
        "illuminate/database": "~5.1",
        "robmorgan/phinx": "^0.9.2",
        "slim/csrf": "^0.8.2",
        "slim/flash": "^0.4.0"

    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/",
            "Console\\": "src/console",
            "Test\\": "src/tests",
            "Kernel\\": "kernel/"
        }
    },
    "require-dev": {
        "phpmetrics/phpmetrics": "^2.3",
        "phpunit/phpunit": "5.4.*",
        "symfony/process": "2.*",
        "symfony/console": "^3.3"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "serve": "php -S 0.0.0.0:8080 -t public"
    }
}
